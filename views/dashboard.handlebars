<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card new-post-container">
        <div class="card-header new-post-header">
          Create New Post
        </div>
        <div class="card-body">
          <form class="new-post-form">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" class="form-control" id="title" placeholder="Title">
            </div>
            <div class="form-group">
              <label for="content">Content</label>
              <textarea class="form-control" id="content" rows="3" placeholder="Content"></textarea>
            </div>
            <button id="create-btn" type="submit" class="btn btn-secondary btn-block mt-3">Create</button>
          </form>
        </div>
      </div>
      <button class="btn btn-primary btn-lg new-post-btn">+ New Post</button>
      
    </div>
  </div>
</div>

<script src="/js/dashboard.js"></script>